    <!--Please add new beans in alphabetical order, so we know what is missing-->

	<bean id="usecaseProcessor" class="com.ericsson.raso.sef.smart.usecase.UsecaseProcessor" />

    <bean id="balanceAdjustment" class="com.ericsson.raso.sef.smart.processor.BalanceAdjustment" />
    <bean id="bucketCreateOrWriteRop" class="com.ericsson.raso.sef.smart.processor.BucketCreateOrWriteRop"/>
    <bean id="bucketRetrieveReadROP" class="com.ericsson.raso.sef.smart.processor.BucketRetrieveReadROP" />
    <bean id="bucketRetrieveReadRPP" class="com.ericsson.raso.sef.smart.processor.BucketRetrieveReadRPP" />

    <bean id="CARecharge" class="com.ericsson.raso.sef.smart.processor.CARecharge" />

    <bean id="createOrWriteCustomer" class="com.ericsson.raso.sef.smart.processor.CreateOrWriteCustomerProcessor"/>
    <bean id="createOrWriteRop" class="com.ericsson.raso.sef.smart.processor.CreateOrWriteRop"/>
    <bean id="createOrWriteServiceAccessKey" class="com.ericsson.raso.sef.smart.processor.CreateOrWriteServiceAccessKey"/>

    <bean id="dateUtil" class="com.ericsson.raso.sef.smart.processor.DateUtil"/>

    <bean id="dummyProcessor" class="com.ericsson.raso.sef.smart.processor.DummyProcessor" />
	<bean id="dummyResponseProcessor" class="com.ericsson.raso.sef.smart.processor.DummyResponseProcessor" />
	
    <bean id="entireDeleteSubscriber" class="com.ericsson.raso.sef.smart.processor.EntireDeleteSubscriber" />
    <bean id="entireRead" class="com.ericsson.raso.sef.smart.processor.EntireReadSubscriber" />

    <bean id="entireReadUtil" class="com.ericsson.raso.sef.smart.processor.EntireReadUtil"/>

    <bean id="modifyCustomerGrace" class="com.ericsson.raso.sef.smart.processor.ModifyCustomerGrace"/>
    <bean id="modifyCustomerPreActive" class="com.ericsson.raso.sef.smart.processor.ModifyCustomerPreActive"/>
    <bean id="modifyPackageItem" class="com.ericsson.raso.sef.smart.processor.ModifyPackageItem" />
    <bean id="modifyTagging" class="com.ericsson.raso.sef.smart.processor.ModifyTagging" />

    <bean id="readCustomerInfoCharge" class="com.ericsson.raso.sef.smart.processor.ReadCustomerInfoCharge" />

    <bean id="requestIdGenerator" class="com.ericsson.raso.sef.smart.processor.RequestIdProcessor" />

    <bean id="retrieveDeleteProcessor" class="com.ericsson.raso.sef.smart.processor.RetrieveDeleteProcessor" />
    <bean id="retrieveReadRPP" class="com.ericsson.raso.sef.smart.processor.RetrieveReadRPP" />

   	<bean id="smartInEdr" class="com.ericsson.raso.sef.edr.processor.SmartEdrInProcessor" />
    <bean id="smartOutEdr" class="com.ericsson.raso.sef.edr.processor.SmartEdrOutProcessor" />
    <bean id="smartCleanEdr" class="com.ericsson.raso.sef.edr.processor.SmartEdrCleanProcessor" />

    <bean id="subscribePackageItem" class="com.ericsson.raso.sef.smart.processor.SubscribePackageItem" />
    <bean id="unsubscribePackageItem" class="com.ericsson.raso.sef.smart.processor.UnsubscribePackageItem" />

    <bean id="versionCreateOrWriteCustomer" class="com.ericsson.raso.sef.smart.processor.VersionCreateOrWriteCustomer" />
    <bean id="versionCreateOrWriteRop" class="com.ericsson.raso.sef.smart.processor.VersionCreateOrWriteRop"/>

    <bean id="versionretrieveReadROP" class="com.ericsson.raso.sef.smart.processor.VersionRetrieveReadROP" />


	<camelContext id="com.ericsson.raso.sef.smart.smartInterface" xmlns="http://camel.apache.org/schema/spring">
		<route>
			<from uri="cxf:bean:smartInterface" />
			<camel:doTry>
				<camel:bean ref="requestIdGenerator"/>
<!-- 				<camel:bean ref="gatekeeperProcessor" method="process"/> -->

				 <camel:wireTap uri="direct:EDRIn"  /> 
				
				<camel:bean ref="usecaseProcessor"/>

				<camel:wireTap uri="direct:EDROut"  />
				<camel:bean ref="dummyResponseProcessor"/>
				 
				<camel:doCatch>
					<camel:exception>java.lang.Exception</camel:exception>
					<camel:bean beanType="com.ericsson.raso.sef.smart.SmartExceptionHandler" />
				</camel:doCatch>
				
				<camel:doFinally>
				
				<camel:wireTap uri="direct:EDRClean"  />
					<camel:bean ref="dummyResponseProcessor"/>
				
				</camel:doFinally>
			</camel:doTry>
		</route>

		<route>
			<from uri="cxf:bean:subscriptionResponse"/>
			<camel:doTry>
				<camel:choice>
					<camel:when>
						<camel:simple>${header.operationName} == 'discoverOfferByFederatedId'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscription.response.DiscoverOfferByFederatedIdResponseProcessor"/>
					</camel:when> 
					<camel:when>
						<camel:simple>${header.operationName} == 'purchase'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscription.response.PurchaseResponseProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'renew'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscription.response.RenewResponseProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'terminate'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscription.response.TerminateResponseProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'expiry'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscription.response.ExpiryResponseProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'preExpiry'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscription.response.PreExpiryResponseProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'preRewnal'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscription.response.PreRenewResponseProcessor"/>
					</camel:when>
				</camel:choice>
				<camel:doFinally>
				<!-- Add exception handler -->
				</camel:doFinally>
			</camel:doTry>
		</route>

		<route>
			<from uri="cxf:bean:subscriberResponse"/>
			<camel:doTry>
				<camel:choice>
					<camel:when>
						<camel:simple>${header.operationName} == 'createSubscriber'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscriber.response.CreateSubscriberProcessor" />
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'readSubscriber'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscriber.response.ReadSubscriberProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'updateSubscriber'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscriber.response.UpdateSubscriberProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'deleteSubscriber'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscriber.response.DeleteSubscriberProcessor"/>
					</camel:when>
					<camel:when>
						<camel:simple>${header.operationName} == 'handleLifeCycle'</camel:simple>
						<camel:bean beanType="com.ericsson.raso.sef.smart.subscriber.response.HandleLifeCycleSubscriberProcessor"/>
					</camel:when>
				</camel:choice>
				<camel:doFinally>
				<!-- Add exception handler -->
				</camel:doFinally>

			</camel:doTry>
		</route>
		
		<camel:route id="wireTap_to_EDRIn">
			<camel:from uri="direct:EDRIn"/>
			<camel:to uri="bean:smartInEdr"/>
		</camel:route>

		<camel:route id="wireTap_to_EDROut">
			<camel:from uri="direct:EDROut"/>
			<camel:to uri="bean:smartOutEdr"/>
		</camel:route>
		
		<camel:route id="wireTap_to_EDRClean">
			<camel:from uri="direct:EDRClean"/>
			<camel:to uri="bean:smartCleanEdr"/>
		</camel:route>
		
	</camelContext>

</beans>
